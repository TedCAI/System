<p id="notice"><%= notice %></p>

<h1>Listing Acticles</h1>

<table>
  <thead>
    <tr>
      <th>Request link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @acticles.each do |acticle| %>
      <tr>
        <td><%= acticle.request_link %></td>
        <td><%= link_to 'Show', acticle %></td>
        <td><%= link_to 'Edit', edit_acticle_path(acticle) %></td>
        <td><%= link_to 'Destroy', acticle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Acticle', new_acticle_path %> | 
